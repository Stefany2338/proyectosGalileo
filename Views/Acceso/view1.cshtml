@{
    ViewData["Title"] = "Registro";
}

<h2>Crear usuario:)</h2>

<form method="post" action="/Acceso/Registrar">

    <div>
        <label for="nombre">Nombre: </label>
        <input type="text" id="nombre" name="nombre" required />
    </div>

    <div>
        <label for="clave"> Clave: </label>
        <input type="password" id="clave" name="clave" required />
    </div>

    <div>
        <label for="confirmarClave">Confirmar: </label>
        <input type="password" id="confirmarClave" name="confirmarClave" required />
    </div>

    <button type="submit"> Registrar</button>

</form>

<p>@ViewData["Mensaje"]</p>
<a href="/Acceso/Index"> Inicio de sesion </a>